# Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# OpenAI API Key
OPEN_AI_KEY=your_openai_api_key_here

# GitHub Configuration
GITHUB_REPO=https://api.github.com/repos/your_username/your_repo
GITHUB_TOKEN=your_github_token_here
GITHUB_MEMBER=https://api.github.com/users/your_username

# GitHub OAuth (for NextAuth)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Google OAuth (for NextAuth)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Google Text-to-Speech API Key
GOOGLE_TEXT_SPEECH_KEY=your_google_tts_key

# NextAuth Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000