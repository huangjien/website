{
  "name": "website",
  "version": "1.2.2",
  "description": "A modern, responsive blog website template built with Next.js, React, and Tailwind CSS",
  "author": {
    "name": "Jien Huang",
    "email": "huangjien@gmail.com"
  },
  "license": "MIT",
  "private": true,
  "keywords": [
    "nextjs",
    "react",
    "blog",
    "website",
    "tailwindcss",
    "typescript",
    "pwa",
    "i18n"
  ],
  "homepage": "https://github.com/huangjien/blog#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/huangjien/blog.git"
  },
  "bugs": {
    "url": "https://github.com/huangjien/blog/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0",
    "yarn": ">=1.22.0"
  },
  "scripts": {
    "dev": "next dev -p 8080",
    "build": "next build",
    "start": "next start -p 8080",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "prepare": "husky install",
    "docker:build": "docker buildx build --platform linux/amd64 -t huangjien/website .",
    "docker:push": "docker push huangjien/website",
    "docker:run": "docker run --env-file .env.local -ti -d -p 8080:8080 huangjien/website",
    "clean": "rm -rf .next out node_modules/.cache",
    "analyze": "cross-env ANALYZE=true next build"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.59",
    "@ai-sdk/react": "^2.0.85",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/postcss": "^4.1.16",
    "ahooks": "^3.9.6",
    "ai": "^5.0.85",
    "clsx": "^2.1.1",
    "eslint-config-prettier": "^10.1.8",
    "framer-motion": "^12.23.24",
    "http-proxy": "^1.18.1",
    "i18next": "^25.6.0",
    "next": "^16.0.1",
    "next-auth": "^4.24.13",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.4.6",
    "openai": "^6.7.0",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.2.3",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-toastify": "^11.0.5",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "styled-components": "^6.1.19",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@next/bundle-analyzer": "^16.0.1",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.2.0",
    "cross-env": "^10.1.0",
    "css-loader": "^7.1.2",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "eslint-config-next": "^16.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.6",
    "node-mocks-http": "^1.17.2",
    "postcss": "^8.5.6",
    "style-loader": "^4.0.0",
    "tailwindcss": "4.1.16",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "ahooks": {
      "react": "$react",
      "react-dom": "$react-dom"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
